{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc/apps/api-gateway",
    "types": ["node", "express"],
    "rootDir": "src",
    "tsBuildInfoFile": "../../dist/out-tsc/apps/api-gateway/tsconfig.app.tsbuildinfo",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["../../packages/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
