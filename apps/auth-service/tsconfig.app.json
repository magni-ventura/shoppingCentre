{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node", "express"],
    "rootDir": "./src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@packages/error-handler": ["../../packages/error-handler/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
