{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      "error-handler/*": ["../../packages/error-handler/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "../../packages/**/*.ts",
    "../../packages/error-handler/src/**/*.ts",
    "../../packages/error-handler/src/index.ts"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
