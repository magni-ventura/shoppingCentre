{
  "extends": "./tsconfig.base.json",
  "compileOnSave": false,
  "files": [],
  "references": [
    { "path": "./apps/auth-service-e2e" },
    { "path": "./apps/auth-service" },
    { "path": "./apps/api-gateway" }
  ],
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2022",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "paths": {
      "@shopping-centre/error-handler": ["packages/error-handler/src/index.ts"]
    }
  },
  "include": [
    "apps/**/*",
    "packages/**/*",
    "**/*.ts"
  ]
}
