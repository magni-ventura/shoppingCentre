{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["packages/*/src"],
      "@shopping-centre/auth-service/*": ["apps/auth-service/src/*"],
      "@shopping-centre/api-gateway/*": ["apps/api-gateway/src/*"],
      "@shopping-centre/lib/*": ["lib/src/*"],
      "@shopping-centre/error-handler": ["packages/error-handler/src/index.ts"]
    }
  }
}
